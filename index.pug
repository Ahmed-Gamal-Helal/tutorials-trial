html
    head
        title Hamza Table Task
        link(rel="stylesheet" type="text/css" href="css/semantic.min.css")
        link(rel="stylesheet" type="text/css" href="style.css")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js")

    body

        // start building first task by Jemy1234

        .main(ng-app="myApp", ng-controller="myCtrl")

            // form building using semantic-ui

            .ui.form
                .fields
                    .field
                        label Name
                        input(type="text" ng-model="name" placeholder="Name")
                    .field
                        label Phone
                        input(type="text" ng-model="phone" placeholder="Phone")
                    .field
                        label Email
                        input(type="text" ng-model="email" placeholder="Email")
                button.medium.ui.button(ng-click="add()") + Contact

                div
                    p {{msg}}
            // table building for taking the data from the form

            table.ui.striped.table
                thead
                    tr
                        th Name
                        th Phone
                        th Email
                        th Actions

                    tr(ng-repeat="contact in details")
                        td {{contact.name}}
                        td {{contact.phone}}
                        td {{contact.email}}
                        td(ng-repeat="x in details")
                            button.tiny.ui.button Edit
                            button.tiny.ui.button(ng-click = "removeItem($index)") X
                    
        // javascript files links
        script(src="js/semantic.min.js")
        script(src="js/app.js")
        script(src="js/main.js")